<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.tourguide">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".FoodActivity" android:label="@string/mainFood" android:parentActivityName=".MainActivity"></activity>

        <activity android:name=".EducationActivity" android:label="@string/mainEducation" android:parentActivityName=".MainActivity"></activity>

        <activity android:name=".SportsActivity" android:label="@string/mainSports" android:parentActivityName=".MainActivity"></activity>

        <activity android:name=".LandmarksActivity" android:label="@string/mainLandmarks" android:parentActivityName=".MainActivity"></activity>

    </application>

</manifest>